<My_Layout>:
    BoxLayout:
        orientation : 'vertical'
        size: root.width, root.height

        MDLabel:
            text: str(root.text)
            font_size: int(root.font_size)
            theme_text_color: "Custom"
            text_color: 210/255, 212/255, 212/255, 1
            size_hint: 1,0.3
            font_name: 'Roboto-Thin.ttf'
            halign:'right'
            
        GridLayout:
            cols : 4
            spacing : 0.5
            row_force_default:True
            row_default_height:85
            

            MDFlatButton:
                text:'AC'
                size_hint: 0.24, 0.1
                md_bg_color: 190/255, 192/255, 192/255, 1
                font_size:40
                text_color: 28/255, 28/255, 28/255, 1
                font_name: 'Roboto-Thin.ttf'
                on_release: root.all_clear()

            MDFlatButton:
                text:'C'
                size_hint: 0.24, 0.1
                md_bg_color: 190/255, 192/255, 192/255, 1
                font_size:40
                text_color: 0,0,0,1
                font_name: 'Roboto-Thin.ttf'
                on_release: root.clear()

            MDFlatButton:
                text:'%'
                size_hint: 0.24, 0.1
