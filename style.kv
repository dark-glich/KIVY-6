                font_size:40
                text_color: 28/255, 28/255, 28/255, 1
                font_name: 'Roboto-Thin.ttf'
                on_release : root.operation('%')

            MDFlatButton:
                text:'÷'
                size_hint: 0.24, 0.1
                md_bg_color: 0/255, 149/255, 255/255, 1
                font_size:40
                text_color: 1, 1, 1, 1
